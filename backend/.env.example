# ============================================
# AGIS Digital ERP - Variáveis de Ambiente
# ============================================

# Servidor
PORT=3000
NODE_ENV=development

# Banco de Dados PostgreSQL (UTC)
DATABASE_URL=postgresql://usuario:senha@localhost:5432/agis_digital?schema=public

# Timezone da Aplicação
APP_TIMEZONE=America/Sao_Paulo

# CORS (origem permitida)
CORS_ORIGIN=http://localhost:5173

# JWT
JWT_SECRET=sua-chave-secreta-forte-aqui-min-32-caracteres
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=agis-digital
JWT_AUDIENCE=agis-digital-api

# Refresh Token HMAC (chave secreta para HMAC-SHA256, min 32 caracteres)
REFRESH_TOKEN_SECRET=sua-chave-hmac-secreta-forte-aqui-min-32-caracteres

# Rate Limit (Login)
LOGIN_RATE_LIMIT_WINDOW=900000
LOGIN_RATE_LIMIT_MAX=5

# Rate Limit (Global)
GLOBAL_RATE_LIMIT_WINDOW=900000
GLOBAL_RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
